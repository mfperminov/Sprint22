<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:centerColor="#0047AB"
                android:endColor="#0047AB"
                android:startColor="#7F00FF"
                android:type="linear"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>